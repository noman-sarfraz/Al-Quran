<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SurahTranslationOptions">

    <LinearLayout
        android:id="@+id/linear_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="InvalidId,MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/select_msg"
            android:text="Select a translation:"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            />

        <Button
            android:id="@+id/urdu_translation_1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:text="Fateh Muhammad Jalandhri\n (Urdu)" />

        <Button
            android:id="@+id/urdu_translation_2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:text="Mehmood ul Hassan\n (Urdu)" />

        <Button
            android:id="@+id/english_translation_1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:text="Dr Mohsin Khan\n (English)" />

        <Button
            android:id="@+id/english_translation_2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:text="Mufti Taqi Usmani\n (English)" />

        <Button
            android:id="@+id/translation_none"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="None" />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>