<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.noman.al_quran">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AlQuran">
        <activity
            android:name=".ReadSurah"
            android:exported="false" />
        <activity
            android:name=".SurahTranslationOptions"
            android:exported="false" />
        <activity
            android:name=".ReadBySurah"
            android:exported="false" />
        <activity
            android:name=".ParaTranslationOptions"
            android:exported="false" />
        <activity
            android:name=".ReadPara"
            android:exported="false" />
        <activity
            android:name=".ReadByPara"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>